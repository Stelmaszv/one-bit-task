{% extends 'base.html.twig' %}

{% block title %}Kurs Waluty{% endblock %}

{% block body %}
    <h1>Wybrana Data - {{date}}</h1>
    <table class="table">
        <tr>
            <th>Waluta</th>
            <th>Kurs z dzi≈õ</th>
            <th>Kurs ze wskazanej daty</th>
            <th>Zmiana procentowa</th>
        </tr>
        {% for result in results %}
        <tr>
            <td>{{result.Currency}}</td>
            <td>{{result.Rate_from_today}}</td>
            <td>{{result.Indicated_date}}</td>
            {% if result.Percentage_change > 0 %}
                <td style="color:green">{{result.Percentage_change}}</td>
            {% else %}
                <td style="color:red">{{result.Percentage_change}}</td>
            {% endif %}
        </tr>
        {% endfor %}
    </table>
{% endblock %}